{
  "private": true,
  "license": "MIT",
  "scripts": {
    "start-main": "./node_modules/electron/cli.js ./app",
    "start-renderer": "poi -s",
    "build": "rm -rf ./dist && poi --prod && mv ./app/renderer/fonts ./app/renderer/assets/css && node ./node_modules/electron-builder/out/cli/cli.js --macos"
  },
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-builder": "^22.9.1",
    "node-sass": "^4.14.1",
    "poi": "^12.10.2",
    "sass-loader": "^10.0.3",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.12"
  },
  "build": {
    "appId": "com.examples.electronautoupdaterexample",
    "mac": {
      "category": "distribution",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "distribution"
    },
    "publish": [
      "github"
    ]
  }
}
